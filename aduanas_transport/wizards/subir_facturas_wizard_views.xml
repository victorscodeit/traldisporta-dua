<?xml version="1.0" encoding="UTF-8"?>
<odoo>
  <!-- Vista del wizard para subir múltiples facturas -->
  <record id="view_subir_facturas_wizard_form" model="ir.ui.view">
    <field name="name">aduanas.subir.facturas.wizard.form</field>
    <field name="model">aduanas.subir.facturas.wizard</field>
    <field name="arch" type="xml">
      <form string="Subir Facturas PDF">
        <sheet>
          <div class="drop-zone-facturas">
            <input type="file" multiple="multiple" accept="application/pdf,.pdf"/>
            <div class="drop-icon">
              <i class="fa fa-cloud-upload"/>
            </div>
            <div class="drop-text">
              <strong>Arrastra y suelta múltiples archivos PDF aquí</strong>
            </div>
            <div class="drop-hint">
              o haz clic para seleccionar archivos
            </div>
          </div>
          <group class="o_group_full_width" colspan="2">
            <field name="factura_ids" nolabel="1" class="oe_full_width" colspan="2">
              <tree editable="bottom" create="0" delete="1" string="Facturas a subir">
                <field name="name" string="Nombre" required="1" readonly="1"/>
                <field name="factura_pdf" string="Factura PDF" filename="factura_pdf_filename" widget="binary" required="1" readonly="1"/>
                <field name="factura_pdf_filename" invisible="1"/>
              </tree>
            </field>
          </group>
        </sheet>
        <footer>
          <button string="Crear Expediciones" name="action_crear_expediciones" type="object" class="oe_highlight"/>
          <button string="Cancelar" special="cancel"/>
        </footer>
      </form>
    </field>
  </record>

  <!-- Acción para abrir el wizard -->
  <record id="action_subir_facturas_wizard" model="ir.actions.act_window">
    <field name="name">Subir Facturas PDF</field>
    <field name="res_model">aduanas.subir.facturas.wizard</field>
    <field name="view_mode">form</field>
    <field name="target">new</field>
    <field name="view_id" ref="view_subir_facturas_wizard_form"/>
  </record>

</odoo>

