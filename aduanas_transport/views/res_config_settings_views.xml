<odoo>
<record id="res_config_settings_view_form_aduanas_unif" model="ir.ui.view">
    <field name="name">res.config.settings.view.form.aduanas.unif</field>
    <field name="model">res.config.settings</field>
    <field name="inherit_id" ref="base.res_config_settings_view_form"/>
    <field name="arch" type="xml">
        <!-- Inserta después del último app_settings_block o al final del formulario -->
        <xpath expr="(//div[hasclass('app_settings_block')])[last()]" position="after">
            <div class="app_settings_block" data-string="Aduanas AEAT (Unificado)">
                <h2>Aduanas AEAT</h2>

                <div class="row mt16 o_setting_container">
                    <div class="col-12 col-lg-6 o_setting_box">
                        <div class="o_setting_left_pane">
                            <field name="aeat_endpoint_cc515c"/>
                            <field name="aeat_endpoint_cc511c"/>
                        </div>
                        <div class="o_setting_right_pane">
                            <label for="aeat_endpoint_cc515c"/>
                            <div class="text-muted">Exportación (AES)</div>
                        </div>
                    </div>

                    <div class="col-12 col-lg-6 o_setting_box">
                        <div class="o_setting_left_pane">
                            <field name="aeat_endpoint_imp_decl"/>
                        </div>
                        <div class="o_setting_right_pane">
                            <label for="aeat_endpoint_imp_decl"/>
                            <div class="text-muted">Importación (DUA)</div>
                        </div>
                    </div>

                    <div class="col-12 col-lg-6 o_setting_box">
                        <div class="o_setting_left_pane">
                            <field name="aeat_endpoint_bandeja"/>
                        </div>
                        <div class="o_setting_right_pane">
                            <label for="aeat_endpoint_bandeja"/>
                            <div class="text-muted">Bandeja AEAT (común)</div>
                        </div>
                    </div>

                    <div class="col-12 col-lg-6 o_setting_box">
                        <div class="o_setting_left_pane">
                            <field name="cert_attachment_id"/>
                            <field name="cert_password" password="True"/>
                        </div>
                        <div class="o_setting_right_pane">
                            <label for="cert_attachment_id"/>
                            <div class="text-muted">Certificado P12/PFX para firma (cliente SOAP)</div>
                        </div>
                    </div>
                </div>

                <h2>Procesamiento de Facturas PDF (IA/OCR)</h2>
                <div class="row mt16 o_setting_container">
                    <div class="col-12 col-lg-6 o_setting_box">
                        <div class="o_setting_left_pane">
                            <field name="openai_api_key" password="True"/>
                        </div>
                        <div class="o_setting_right_pane">
                            <label for="openai_api_key"/>
                            <div class="text-muted">
                                <strong>OpenAI API Key</strong> para usar GPT-4o Vision con splitting por páginas.
                                Dejar vacío para usar OCR alternativo (pdfplumber/PyPDF2).
                                <br/>
                                <a href="https://platform.openai.com/api-keys" target="_blank">Obtener API Key de OpenAI</a>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </xpath>
    </field>
</record>

</odoo>